{
  "name": "secrets-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "lint": "eslint src/.",
    "migrate": "cd src && sequelize db:migrate",
    "dev": "NODE_ENV=development nodemon --exec 'npm run lint && babel-node ./src/server.js'",
    "dist-clean": "rm -rf dist && mkdir dist",
    "build-server": "babel -d ./dist ./src -s",
    "build": "npm run dist-clean && npm run build-server",
    "start": "NODE_ENV=production node ./dist/server.js",
    "pretest": "NODE_ENV=test npm run migrate",
    "test": "NODE_ENV=test mocha --require @babel/register ./src/tests/*.js --exit"
  },
  "author": "Kasheftin",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "moment": "^2.26.0",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.10",
    "sodium-plus": "^0.7.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4"
  }
}
